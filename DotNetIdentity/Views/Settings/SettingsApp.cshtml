@model GlobalSettings
@inject IViewLocalizer L
@{
    ViewData["Title"] = "Application Settings";
}

<div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Settings</h3>
                <p class="text-subtitle text-muted">Application-Settings </p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Settings / Application-Settings</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

<div class="card card shadow p-3 mb-5 rounded">
    @if (ViewData["message"] != null)
        {
            <div class="alert alert-success"><i class="bi bi-check-circle"></i> @ViewData["message"]</div>
            ViewData["message"] = null;
        }
    <div class="card-body">
        <form asp-action="SettingsApp" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplicationName">Application name</label>
                <input asp-for="ApplicationName" class="form-control" />
                <span asp-validation-for="ApplicationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SessionCookieExpiration">Session cookie expiration (in seconds!)</label>
                <input asp-for="SessionCookieExpiration" class="form-control" />
                <span asp-validation-for="SessionCookieExpiration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SessionTimeoutWarnAfter">Warn about Session timeout after (in milliseconds!)</label>
                <input asp-for="SessionTimeoutWarnAfter" class="form-control" />
                <span asp-validation-for="SessionTimeoutWarnAfter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SessionTimeoutRedirAfter">When Session Timeout warn dialog is open. Logout after (in milliseconds!)</label>
                <input asp-for="SessionTimeoutRedirAfter" class="form-control" />
                <span asp-validation-for="SessionTimeoutRedirAfter" class="text-danger"></span>
            </div>
            <div class="d-flex flex-row-reverse">
                <button type="submit" class="btn btn-primary mt-1" >Save Application Settings</button>
            </div>
        </form>
    </div>
</div>


@section scripts {
    <script src="~/assets/extensions/toastify-js/src/toastify.js"></script>    
}