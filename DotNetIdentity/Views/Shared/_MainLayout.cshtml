            </header>
            <div id="main-content">
                <div class="page-heading">
                    <section class="section">                    
                            @RenderBody()                    
                    </section>
                </div>
                 <footer>
                <div class="footer clearfix mb-0 text-muted">
                    <div class="float-start">
                        <p>2022 &copy; Sascha Heimann</p>
                    </div>
                    <div class="float-end">
                        <p>Crafted with <span class="text-danger"><i class="bi bi-cup-hot-fill"></i></span>
                    </div>
                </div>
            </footer>
            </div>
           
