@model SignUpViewModel
@inject IViewLocalizer L
@{
    ViewData["Title"] = "Sign Up";
    Layout = "_AuthLayout";
}

<div class="auth-logo">
    <a href="index.html"><img src="~/assets/images/logo/logo_colored.png" alt="Logo" style="height:3.5rem !important;"></a>
</div>
<h1 class="auth-title">@L["1"]</h1>
<p class="auth-subtitle mb-5">@L["2"]</p>

<form asp-action="Register">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6 col-12">
            <div class="form-group position-relative has-icon-left mb-4">
                <input asp-for="FirstName" class="form-control form-control-xl" placeholder="@L["3"]" />
                <div class="form-control-icon">
                    <i class="bi bi-card-heading"></i>
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="form-group position-relative has-icon-left mb-4">
                <input asp-for="LastName" class="form-control form-control-xl" placeholder="@L["4"]" />
                <div class="form-control-icon">
                    <i class="bi bi-card-heading"></i>
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group position-relative has-icon-left mb-4">
        <input asp-for="UserName" class="form-control form-control-xl" placeholder="@L["5"]" />
        <div class="form-control-icon">
            <i class="bi bi-person"></i>
        </div>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group position-relative has-icon-left mb-4">
        <input asp-for="Email" class="form-control form-control-xl" placeholder="@L["6"]" />
        <div class="form-control-icon">
            <i class="bi bi-envelope"></i>
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group position-relative has-icon-left mb-4">
        <input asp-for="Password" class="form-control form-control-xl" type="password" />
        <div class="form-control-icon">
            <i class="bi bi-shield-lock"></i>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group position-relative has-icon-left mb-4">
        <input asp-for="BirthDay" class="form-control form-control-xl" type="date" />
        <div class="form-control-icon">
            <i class="fa fa-birthday-cake"></i>
        </div>
        <span asp-validation-for="BirthDay" class="text-danger"></span>
    </div>

    <div class="form-group position-relative has-icon-left mb-4">
        <select asp-for="Gender" class="form-control form-control-xl"
            asp-items="Html.GetEnumSelectList<Gender>()"></select>
        <div class="form-control-icon">
            <i class="bi bi-gender-trans"></i>
        </div>
        <span asp-validation-for="Gender"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-block btn-lg shadow-lg mt-5">@L["9"]</button>

</form>
<div class="text-center mt-5 text-lg fs-4">
    <a class="font-bold" asp-controller="User" asp-action="Login">@L["8"]</a></p>
</div>